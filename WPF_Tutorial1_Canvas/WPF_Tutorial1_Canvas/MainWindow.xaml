<Window x:Class="WPF_Tutorial1_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tutorial1_Canvas"
        xmlns:SystemGesture="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" 
        Topmost="False" 
        WindowState="Normal" >
    <Window.Resources>
        <SystemGesture:String x:Key="strHelloAgain">Hello Again</SystemGesture:String>

    </Window.Resources>
    <Canvas Background="Gray" Height="350" Width="525">
        <Label Content="Name" Canvas.Left="52" Canvas.Top="35"/>
        <TextBox Name="UserName" Height="23" Canvas.Left="139" TextWrapping="Wrap" Text="Enter Name" Canvas.Top="35" Width="120" RenderTransformOrigin="0.28,1.025"/>
        <Button Content="Send" Canvas.Left="286" Margin="0" Canvas.Top="38" Width="75" RenderTransformOrigin="0.483,0.475" Click="Send_Button_Click"/>

    </Canvas>
</Window>
